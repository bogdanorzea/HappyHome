<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.repairs.RepairEditorActivity"
    tools:showIn="@layout/activity_reading_editor">


    <android.support.design.widget.TextInputLayout style="@style/TextInputLayoutStyle">

        <EditText
            android:id="@+id/reading_date"
            style="@style/EditTextStyle.DatePicker"
            android:hint="Reading date" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout style="@style/TextInputLayoutStyle">

        <EditText
            android:id="@+id/reading_value"
            style="@style/EditTextStyle.Decimal"
            android:hint="Reading value" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
